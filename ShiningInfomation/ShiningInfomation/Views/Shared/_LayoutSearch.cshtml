<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <label class="navbar-brand">闪亮四期学生信息管理系统</label>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("主页", "Index", "Index")</li>
                    <li>@Html.ActionLink("搜索信息", "Search", "Search")</li>
                    <li>@Html.ActionLink("管理员页", "Index", "Admin")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div style="margin-top:0px; margin-bottom:0px; margin-left:0px; margin-right:0px;">
            <img src="~/Image/Search_image.png" />
        </div>
        <div style="position:absolute; ">
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p style="margin-left:850px;margin-top:500px;">&copy; @DateTime.Now.Year - 搜索信息页</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>


