@{
    Layout = "~/Views/Shared/_LayoutSearch.cshtml";
}

@model IEnumerable<ShiningInfomation.Entity.StudentInfo>
@{
    ViewBag.Title = "Search";
}
<h2>Search</h2>
@using (Html.BeginForm())
{
    <p style="font-family:Arial;font-size:110%;color:black">
        <strong>学生姓名</strong> @Html.TextBox("Search_name", "", new { style = "width:150px; border-radius:5px; " })
        <br><br>
        <strong>导师姓名</strong> @Html.TextBox("Search_teacher", "", new { style = "width:150px; border-radius:5px;" })
        <br><br>
        <strong>项目组</strong>&emsp; @Html.TextBox("Search_team", "", new { style = "width:150px; border-radius:5px;" })
        <br><br>
        <strong>闪亮小组</strong> @Html.TextBox("Search_group", "", new { style = "width:150px; border-radius:5px;" })
        <br>
        <div style="border:1px;width:215px;height:80px;text-align:right">
            <input type="submit" value="查询" />
        </div>
    </p>
}
@if (Model.Count() > 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentAlias)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Motto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GroupNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeacherInfo.TeacherName)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentAlias)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Team)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Motto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GroupNum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeacherInfo.TeacherName)
                </td>
            </tr>
        }
    </table>
}